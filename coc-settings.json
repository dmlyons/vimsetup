{
    "signature.preferShownAbove": false,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "completeUnimported": true,
                "staticcheck" : true,
                "analyses" : {
                    "ST1020":true,
                    "ST1021":true,
                    "ST1022":true
                }
                // ["ST1000", "ST1001", "ST1020", "ST1021" ]
            }
        }
    }
}
