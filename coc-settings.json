{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "completeUnimported": true,
                "staticcheck" : true,
                "experimentalDisabledAnalyses" : ["ST1000", "ST1003"]
            }
        }
    }
}
